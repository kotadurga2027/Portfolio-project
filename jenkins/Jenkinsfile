pipeline {
    agent any

    stages {

        stage('Terraform Infra') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t portfolio-app .'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('kubernetes') {
                    sh 'kubectl apply -f .'
                }
            }
        }

        stage('EC2 Automation') {
            steps {
                dir('python-automation') {
                    sh 'python3 ec2_start.py'
                }
            }
        }
    }
}
